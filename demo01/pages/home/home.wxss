    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    height: 122rpx;
    width: 100%;
    box-sizing: border-box;
    border-bottom: 2rpx solid #DFDFDF;
}
.cart-list-item > text:nth-child(1){
    text-align: left;
    width: 380rpx;

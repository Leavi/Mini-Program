.cart-list-item-num{
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-end;
    align-items: center;
    width: 160rpx;
    margin-right: 24rpx;
}
.cart-list-item-num text{
    font-size: 9pt;
    color: #545454;
    width: 50rpx;
    text-align: center;
}
.cart-list-item-num image{
    display: block;
    width: 44rpx;
    height: 44rpx;
}

/* 评论部分样式 */
.mark{
    display: flex;
    flex-flow: column;
    width: 100%;
}
.mark text{
    font-size: 9pt;
    width: 100%;
    text-align: center;
    margin-top: 20rpx;
}

/* 商家部分 */
.business{
    width: 100%;
    background-color: #eee;
}
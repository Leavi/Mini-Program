/* pages/home/home.wxss */

.top {
    width: 100%;
    height: 180rpx;
    background-color: #333;
    display: flex;
    flex-flow: row nowrap;
    justify-content: left;
    align-items: top;
}

.store-photo {
    display: block;
    width: 111rpx;
    height: 111rpx;
    margin: 20rpx;
}

.store-title {
    display: flex;
    flex-flow: column;
    justify-content: flex-start;
    align-items: left;
    padding-top: 40rpx;
}

.store-name {
    color: #fff;
    font-size: 12pt;
    line-height: 1.4;
    margin-bottom: 12rpx;
}

.store-notice {
    display: flex;
    flex-flow: row nowrap;
    justify-content: left;
    align-items: center;
}

.store-notice text {
    color: #fff;
    font-size: 10pt;
    margin-left: 6rpx;
}

.notice-icon {
    display: block;
    width: 28rpx;
    height: 28rpx;
}

.content {
    width: 100%;
}

.content-tabbar {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-around;
    align-items: center;
    box-shadow: 0 3rpx 12rpx #e4e4e4;
}

.tabbar-item {
    width: 100%;
    line-height: 74rpx;
    text-align: center;
    box-sizing: border-box;
    border-bottom: 4rpx solid #fff;
}

.tabbar-item text {
    color: #666;
    font-size: 10pt;
}

.tabbar-item-active {
    border-bottom: 4rpx solid #c3a769;
}

.tabbar-item-active text {
    color: #c3a769;
}

.content-show {
    width: 100%;
}

.goods {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    width: 100%;
    z-index: 1000;
}

.goods-classify {
    display: flex;
    flex-flow: column;
    align-items: center;
    width: 162rpx;
}

.goods-classify-item {
    width: 100%;
    background-color: #f4f4f4;
}

.goods-classify-item text {
    display: block;
    width: 140rpx;
    line-height: 114rpx;
    font-size: 9pt;
    text-align: center;
    border-bottom: 2rpx dashed #c4c4c4;
    margin: 0 auto;
    box-sizing: border-box;
}

.classify-item-active {
    background-color: #fff;
    height: 116rpx;
    margin-top: -2rpx;
}

.classify-item-active text {
    border-bottom: 2rpx dashed #fff;
}

.goods-list {
    display: flex;
    flex-flow: column;
    width: 570rpx;
}
.goods-list .goods-list-item:last-child{
    margin-bottom: 160rpx;
}

.goods-list-title {
    display: block;
    width: 100%;
    line-height: 20rpx;
    font-size: 8pt;
    color: #242424;
    border-left: 2rpx solid #c3a769;
    box-sizing: border-box;
    padding: 0 6rpx;
    margin: 20rpx 0;
}

.goods-list-item {
    display: flex;
    flex-flow: row;
    width: 100%;
    height: 222rpx;
    box-sizing: border-box;
    border-bottom: 2rpx solid #e4e4e4;
    padding-top: 22rpx;
    overflow: auto;
    position: relative;
}

.list-item-img {
    width: 124rpx;
    height: 124rpx;
    box-sizing: border-box;
    border: 2rpx solid #e4e4e4;
}

.list-item-img image {
    display: block;
    height: 120rpx;
    width: 120rpx;
}

.list-item-info {
    display: flex;
    flex-flow: column;
    margin-left: 20rpx;
}

.item-info-name {
    font-size: 11pt;
    color: #333;
    line-height: 44rpx;
}

.item-info-price {
    font-size: 11pt;
    color: #c3a769;
    line-height: 44rpx;
    font-weight: bold;
}

.item-info-sales {
    font-size: 9pt;
    color: #a5a5a5;
    line-height: 36rpx;
}

.item-info-keywords {
    display: flex;
    flex-flow: row nowrap;
    margin-top: 10rpx;
}
.item-info-keywords text {
    width: 62rpx;
    height: 38rpx;
    line-height: 38rpx;
    font-size: 8pt;
    text-align: center;
    border: 2rpx solid #c3a769;
    color: #c3a769;
    border-radius: 8rpx;
    margin-left: 10rpx;
}

.item-info-keywords text:nth-child(1) {
    margin-left: 0;
}

.list-item-num {
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-end;
    align-items: center;
    width: 160rpx;
    height: 80rpx;
    position: absolute;
    right: 24rpx;
    bottom: 0;
}
.list-item-num image{
    display: block;
    width: 44rpx;
    height: 44rpx;
}

.list-item-num text{
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
    font-size: 9pt;
    color: #666666;
    width: 50rpx;
}
.shade{
    display: blcok;
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 2;
}

.cart{
    width: 100%;
    position: fixed;
    bottom: 0;
    z-index: 3;
}
.cart-bar{
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    width: 100%;
    height: 96rpx;
    background-color: #333333;
}
.cart-bar-total{
    width: 70%;
    height: 96rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: left;
    position: relative;
}
.cart-bar-total-icon{
    position: relative;
    top: -40rpx;
    left: 20rpx;
    margin-right: 30rpx;
}
.cart-bar-total-icon image{
    display: block;
    width: 106rpx;
    height: 106rpx;
    box-sizing: border-box;
    padding: 16rpx;
    background-color: #C3A769;
    border-radius: 50%;
}
.cart-bar-total-icon>text{
    position: absolute;
    top: 10rpx;
    right: 0rpx;
    font-size: 7pt;
    display: block;
    width: 28rpx;
    height: 28rpx;
    background-color: #f00;
    text-align: center;
    border-radius: 50%;
    margin-left: 20rpx;
    color: #fff;
}
.cart-bar-total>text{
    color: #fff;
    font-size: 14pt;
    margin-top: 10rpx;
    font-weight: bold;
}
.cart-bar-settlement{
    width: 30%;
    font-size: 13pt;
    background-color: #C3A769;
    line-height: 96rpx;
    text-align: center;
    color: #fff;
}

.cart-list{
    display: flex;
    flex-flow: column;
    width: 100%;
    max-height: 600rpx;
    background-color: #fff;
    box-sizing: border-box;
}
.cart-list-top{
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    height: 74rpx;
    width: 100%;
    background-color: #F4F4F4;
}
.cart-list-top text{
    font-size: 9pt;
    color: #545454;
    margin: 0 24rpx;
}
